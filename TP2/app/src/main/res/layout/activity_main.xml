<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-37dp">


    <EditText
        android:id="@+id/et_calc"
        android:layout_width="409dp"
        android:layout_height="74dp"
        android:layout_marginBottom="84dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:editable="false"
        android:focusable="false"
        android:inputType="none"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/table_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></EditText>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="410dp"
        android:layout_height="319dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="74dp">
            <Button
                android:id="@+id/bt_1"
                android:layout_width="100dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/bt_2"
                android:layout_width="107dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/bt_3"
                android:layout_width="102dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/bt_div"
                android:layout_width="106dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="98dp">

            <Button
                android:id="@+id/bt_4"
                android:background="?android:attr/selectableItemBackground"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_5"
                android:background="?android:attr/selectableItemBackground"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_6"
                android:background="?android:attr/selectableItemBackground"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_man"
                android:background="?android:attr/selectableItemBackground"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="90dp">

            <Button
                android:id="@+id/bt_7"
                android:background="?android:attr/selectableItemBackground"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_8"
                android:background="?android:attr/selectableItemBackground"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_9"
                android:background="?android:attr/selectableItemBackground"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_min"
                android:background="?android:attr/selectableItemBackground"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_0"
                android:background="?android:attr/selectableItemBackground"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_clear"
                android:background="?android:attr/selectableItemBackground"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_dot"
                android:background="?android:attr/selectableItemBackground"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_pls"
                android:background="?android:attr/selectableItemBackground"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="99dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_result"
                android:background="#0682BA"
                android:text="="
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>